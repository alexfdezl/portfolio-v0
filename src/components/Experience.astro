---
export interface Props {
    position: string;
    startDate: string;
    endDate: string | null;
    summary: string;
    name: string;
}
const {position, startDate, endDate, summary, name} = Astro.props;
---
<article>
    <header class="sm:flex sm:justify-between items-center mt-4">
        <div>
            <h3 class="text-lg">{position}</h3>
            <h4 class="italic darK:opacity-60 opacity-80">{name}</h4>
        </div>
        <div>
            <span>{startDate} - {endDate ?? "Act"}</span>
        </div>
    </header>
    <p class="mt-3 text-pretty">{summary}</p>
</article>