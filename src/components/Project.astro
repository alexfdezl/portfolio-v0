---
import GitHub from '@icons/GitHub.astro';

export interface Props {
    title: string;
    description: string;
    url: string;
    image: string;
    github: string;
}
const {title, description, url, image, github} = Astro.props;
---

<article class="grid grid-cols-1 rounded-2xl shadow-lg dark:shadow-slate-700 hover:shadow-2xl  transition duration-300">

    <img src="/projects/svgl.webp" alt="" class="rounded-t-2xl m-0">

    <div class="p-8">
        <h3 class="font-bold text-2xl">{title}</h3>
        <p class="pt-3">{description}</p>
        <div class="flex justify-end items-center">
            <a
                href={github}
                target="_blank"
                rel="noopener noreferrer"
                class="transition-transform duration-300 hover:scale-125 w-6 h-6"
            >
                    <GitHub />
            </a>
            <a href={url} target="_blank" rel="noopener noreferrer" class="transition-transform duration-300 hover:scale-125">
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M13.5 6H5.25A2.25 2.25 0 0 0 3 8.25v10.5A2.25 2.25 0 0 0 5.25 21h10.5A2.25 2.25 0 0 0 18 18.75V10.5m-10.5 6L21 3m0 0h-5.25M21 3v5.25" />
                </svg>                  
            </a>
            <!-- <button class="rounded-full p-2 mt-3 transition shadow-lg dark:bg-white dark:text-black dark:hover:bg-white">Go to site</button> -->
        </div>
    </div>

</article>