---
export interface Props {
    title: string;
    description: string;
    url: string;
    image: string;
    github: string;
}
const {title, description, url, image, github} = Astro.props;
---

<article class="grid grid-cols-1 rounded-2xl shadow-lg dark:shadow-slate-700 hover:-translate-y-4 hover:translate-x-4  transition duration-300">

    <img src="/projects/svgl.webp" alt="" class="rounded-t-2xl m-0">

    <div class="p-8">
        <h3 class="font-bold text-2xl">{title}</h3>
        <p class="pt-3">{description}</p>
        <button class="rounded-full p-2 mt-3 border-black border-2">Go to site</button>
    </div>

</article>